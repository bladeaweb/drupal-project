{
    "name": "drunomics/drupal-project",
    "description": "Project template for drunomics Drupal 8 projects with composer",
    "type": "project",
    "authors": [
        {
            "name": "drunomics GmbH",
            "role": "Creator."
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "~1",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "8.0.*",
        "drush/drush": "~8.0",
        "drunomics/drudrush": "dev-master",
        "drupal/console": "~0.10",
        "wikimedia/composer-merge-plugin": "^1.3@dev"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "drunomics/drudrush",
                "type": "drupal-drush",
                "version": "master",
                "source": {
                    "url": "git@bitbucket.org:drunomics/drudrush.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://packages.drunomics.com"
        },
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "sh ./scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        }
    }
}
