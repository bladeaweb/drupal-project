{
    "name": "drunomics/drupal-project",
    "description": "Project template for drunomics Drupal 8 projects with composer",
    "type": "project",
    "authors": [
        {
            "name": "drunomics GmbH",
            "role": "Creator."
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "~8.0",
        "drupal/admin_toolbar": "^1.0",
        "drush/drush": "8.*",
        "drupal/console": "1.*",
        "drunomics/drudrush": "1.*",
        "oomphinc/composer-installers-extender": "*",
        "wikimedia/composer-merge-plugin": "1.3.*"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drunomics.com"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "process-replacements": "scripts/composer/process-replacements.php",
        "init-setup": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-root-package-install": [
            "rm README.md && mv README.md.dist README.md",
            "@process-replacements"
        ],
        "post-create-project-cmd": [
            "ln -sr web/sites/default/settings.vagrant.php web/sites/default/settings.php",
            "@init-setup"
        ],
        "post-install-cmd": "@init-setup",
        "post-update-cmd": "@init-setup"
    },
    "extra": {
        "installer-types": ["library"],
        "installer-paths": {
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "web/core": ["type:drupal-core"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/libraries/{$name}/": [
                "type:drupal-library",
                "vendor:bower-asset",
                "vendor:npm-asset"
            ],
            "web/modules/drunomics/{$name}": ["vendor:drunomics"],
            "web/modules/contrib/{$name}": ["type:drupal-module"]
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "drunomics/*": "source",
            "*": "dist"
        }
    },
    "suggest": {
        "drunomics/dsk_media": "1.*",
        "drunomics/dsk_devel": "1.*"
    }
}
