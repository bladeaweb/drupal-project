{
    "name": "drunomics/drupal-project",
    "description": "Project template for drunomics Drupal 8 projects with composer",
    "type": "project",
    "authors": [
        {
            "name": "drunomics GmbH",
            "role": "Creator."
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "~8.0",
        "drupal/admin_toolbar": "^8.1",
        "drush/drush": "8.x-dev",
        "drupal/console": "~0.10",
        "drunomics/drudrush": "1.*",
        "wikimedia/composer-merge-plugin": "1.3.*"
    },
    "require-dev": {
       "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drunomics.com"
        },
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "process-replacements": "scripts/composer/process-replacements.php",
        "init-setup": "@post-install-cmd",
        "post-create-project-cmd": [
            "rm README.md && mv README.md.dist README.md",
            "@process-replacements",
            "drush dpsetup --force",
            "@init-setup"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/drunomics/{$name}": ["vendor:drunomics"],
            "web/modules/contrib/{$name}": ["type:drupal-module"]
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "drunomics/*": "source",
            "*": "dist"
        }
    }
}
